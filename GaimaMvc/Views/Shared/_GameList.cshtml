@model List<GaimaMvc.Models.GameInfoView>

<div>
    @if(Model != null)
    {
        foreach (var game in Model)
        {
            <div class="row row-gameList panel">
                <div class="col-xs-3">
                    <img src="@game.Images.sThumbnail" />
                </div>
                <div class="col-xs-7">
                    <div class="col-xs-12">
                        @Html.ActionLink(game.Title, "GameInfo/" + game.ID)
                    </div>
                    <div class="col-xs-3">
                        <strong>Platforms:</strong>
                        <p>
                            @foreach (var platform in game.Platforms)
                            {
                                @Html.ActionLink(platform.sName, "PlatformSearch/" + platform.iPlatform)
                                <br />
                            }
                        </p>
                    </div>
                    <div class="col-xs-3">
                        <strong>Genres:</strong>
                        <p>
                            @foreach (var genre in game.Genres)
                            {
                                @Html.ActionLink(genre.sName, "GenreSearch/" + genre.iGenre)
                                <br />
                            }
                        </p>
                    </div>
                    <div class="col-xs-3">
                        <strong>Graphic Styles:</strong>
                        <p>
                            @foreach (var graphicStyle in game.GraphicStyles)
                            {
                                @Html.ActionLink(graphicStyle.sName, "GraphicStyleSearch/" + graphicStyle.iGraphicStyle)
                                <br />
                            }
                        </p>
                    </div>
                    <div class="col-xs-3">
                        <strong>Themes:</strong>
                        <p>
                            @foreach (var theme in game.Themes)
                            {
                                @Html.ActionLink(theme.sName, "ThemeSearch/" + theme.iTheme)
                                <br />
                            }
                        </p>
                    </div>
                </div>
                <div class="col-xs-2">
                    @if (game.ScoreSimilarity != null)
                    {
                        <strong>Rating</strong>
                        <p id="gameListScore">@game.ScoreSimilarity</p>
                    }
                </div>  
            </div>
        }
    }
</div>